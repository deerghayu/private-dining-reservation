{
  "openapi": "3.0.3",
  "info": {
    "title": "OpenAPI definition",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "Restaurants",
      "description": "Restaurant and room catalog APIs"
    },
    {
      "name": "Reservations",
      "description": "Reservation management APIs for diners and staffs"
    }
  ],
  "paths": {
    "/api/v1/reservations": {
      "post": {
        "tags": [
          "Reservations"
        ],
        "summary": "Create a reservation",
        "description": "Creates a reservation for a given room/date/time slot after validating capacity, spend, and availability.",
        "operationId": "createReservation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateReservationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Reservation created",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          },
          "409": {
            "description": "Room already booked",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          },
          "422": {
            "description": "Business rule violation",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/reservations/{id}/cancel": {
      "post": {
        "tags": [
          "Reservations"
        ],
        "summary": "Cancel a reservation",
        "description": "Allows diners or staff to cancel an upcoming reservation.",
        "operationId": "cancelReservation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Reservation identifier",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Cancellation details (who cancelled and why)",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CancelReservationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Reservation cancelled",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Cancellation not allowed",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          },
          "404": {
            "description": "Reservation not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/restaurants": {
      "get": {
        "tags": [
          "Restaurants"
        ],
        "summary": "List all restaurants",
        "description": "Optionally filter restaurants by city.",
        "operationId": "listAllRestaurants",
        "parameters": [
          {
            "name": "city",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of restaurants",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Restaurant"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/restaurants/{restaurantId}/rooms": {
      "get": {
        "tags": [
          "Restaurants"
        ],
        "summary": "Rooms for a restaurant",
        "description": "Returns active rooms for a restaurant.",
        "operationId": "listRoomsByRestaurant",
        "parameters": [
          {
            "name": "restaurantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of rooms for the restaurant",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RoomSummaryResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/restaurants/{restaurantId}/rooms/{roomId}/availability": {
      "get": {
        "tags": [
          "Restaurants"
        ],
        "summary": "Room availability calendar",
        "description": "Generates availability for every time slot between startDate and endDate.",
        "operationId": "getRoomAvailability",
        "parameters": [
          {
            "name": "restaurantId",
            "in": "path",
            "description": "Restaurant identifier",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "roomId",
            "in": "path",
            "description": "Room identifier",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "Start date (inclusive)",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "End date (inclusive)",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Availability calendar for the room",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/AvailabilityResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/restaurants/{restaurantId}/reservations": {
      "get": {
        "tags": [
          "Reservations"
        ],
        "summary": "List reservations for a restaurant",
        "description": "Staff endpoint to view reservations for a restaurant.",
        "operationId": "restaurantReservations",
        "parameters": [
          {
            "name": "restaurantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number (0-indexed)",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Page size",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Reservations returned",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/PageReservationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/reservations/{id}": {
      "get": {
        "tags": [
          "Reservations"
        ],
        "summary": "Get reservation details",
        "description": "Fetches a reservation by id.",
        "operationId": "getReservationDetails",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Reservation found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          },
          "404": {
            "description": "Reservation not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/diners/{email}/reservations": {
      "get": {
        "tags": [
          "Reservations"
        ],
        "summary": "List reservations for a diner",
        "description": "Returns paginated historical or upcoming reservations for a diner. Pass upcomingOnly=true to filter future bookings.",
        "operationId": "dinerReservations",
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "description": "Diner email address",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "upcomingOnly",
            "in": "query",
            "description": "Only include future reservations",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number (0-indexed)",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Page size",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Reservations returned",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/PageReservationResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateReservationRequest": {
        "type": "object",
        "description": "Payload used to create a reservation",
        "properties": {
          "roomId": {
            "type": "string",
            "format": "uuid",
            "description": "Room identifier"
          },
          "reservationDate": {
            "type": "string",
            "format": "date",
            "description": "Reservation date",
            "example": "2025-11-27"
          },
          "timeSlot": {
            "type": "string",
            "description": "Time slot for the reservation",
            "enum": [
              "BREAKFAST",
              "LUNCH",
              "DINNER",
              "LATE_NIGHT"
            ]
          },
          "partySize": {
            "type": "integer",
            "format": "int32",
            "description": "Party size",
            "example": 12,
            "minimum": 1
          },
          "estimatedSpend": {
            "$ref": "#/components/schemas/MonetaryAmount",
            "description": "Estimated spend for the booking (amount + currency)"
          },
          "specialRequests": {
            "type": "string",
            "description": "Optional special requests such as dietary restrictions"
          },
          "diner": {
            "$ref": "#/components/schemas/Diner",
            "description": "Diner placing the reservation"
          }
        },
        "required": [
          "diner",
          "reservationDate",
          "roomId",
          "timeSlot"
        ]
      },
      "Diner": {
        "type": "object",
        "description": "Diner contact information",
        "properties": {
          "name": {
            "type": "string",
            "description": "Diner full name",
            "example": "Sam Smith",
            "minLength": 1
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Diner email address",
            "example": "sam.smith@example.com",
            "minLength": 1
          },
          "phone": {
            "type": "string",
            "description": "Phone number (E.511)",
            "example": "+13087469999",
            "minLength": 1
          }
        },
        "required": [
          "email",
          "name",
          "phone"
        ]
      },
      "MonetaryAmount": {
        "type": "object",
        "description": "Monetary amount representation",
        "properties": {
          "amount": {
            "type": "number",
            "description": "Amount",
            "example": 1000
          },
          "currency": {
            "type": "string",
            "description": "ISO currency code",
            "example": "USD",
            "minLength": 1
          }
        },
        "required": [
          "amount",
          "currency"
        ]
      },
      "ReservationResponse": {
        "type": "object",
        "description": "Reservation representation returned by the API",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Reservation identifier"
          },
          "roomId": {
            "type": "string",
            "format": "uuid",
            "description": "Room identifier"
          },
          "restaurantId": {
            "type": "string",
            "format": "uuid",
            "description": "Restaurant identifier"
          },
          "reservationDate": {
            "type": "string",
            "format": "date",
            "description": "Reservation date"
          },
          "timeSlot": {
            "type": "string",
            "description": "Time slot booked",
            "enum": [
              "BREAKFAST",
              "LUNCH",
              "DINNER",
              "LATE_NIGHT"
            ]
          },
          "partySize": {
            "type": "integer",
            "format": "int32",
            "description": "Party size"
          },
          "status": {
            "type": "string",
            "description": "Current reservation status",
            "enum": [
              "PENDING",
              "CONFIRMED",
              "CANCELLED"
            ]
          },
          "dinerName": {
            "type": "string",
            "description": "Diner name"
          },
          "dinerEmail": {
            "type": "string",
            "description": "Diner email"
          },
          "dinerPhone": {
            "type": "string",
            "description": "Diner phone number"
          },
          "specialRequests": {
            "type": "string",
            "description": "Special requests recorded for the reservation"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        }
      },
      "CancelReservationRequest": {
        "type": "object",
        "properties": {
          "cancelledBy": {
            "type": "string",
            "minLength": 1
          },
          "reason": {
            "type": "string"
          }
        },
        "required": [
          "cancelledBy"
        ]
      },
      "Restaurant": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "city": {
            "type": "string",
            "minLength": 1
          },
          "state": {
            "type": "string"
          },
          "timezone": {
            "type": "string",
            "minLength": 1
          },
          "currency": {
            "type": "string",
            "minLength": 1
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "city",
          "currency",
          "name",
          "timezone"
        ]
      },
      "RestaurantSummary": {
        "type": "object",
        "description": "Parent restaurant summary",
        "properties": {
          "restaurantId": {
            "type": "string",
            "format": "uuid",
            "description": "Restaurant identifier"
          },
          "name": {
            "type": "string",
            "description": "Restaurant name"
          },
          "city": {
            "type": "string",
            "description": "City"
          },
          "timezone": {
            "type": "string",
            "description": "Timezone"
          }
        }
      },
      "RoomSummaryResponse": {
        "type": "object",
        "description": "Room summary with parent restaurant information",
        "properties": {
          "roomId": {
            "type": "string",
            "format": "uuid",
            "description": "Room identifier"
          },
          "name": {
            "type": "string",
            "description": "Room name"
          },
          "roomType": {
            "type": "string",
            "description": "Type of the room",
            "enum": [
              "ROOFTOP",
              "HALL",
              "PRIVATE_ROOM",
              "CHEF_TABLE"
            ]
          },
          "minCapacity": {
            "type": "integer",
            "format": "int32",
            "description": "Minimum capacity"
          },
          "maxCapacity": {
            "type": "integer",
            "format": "int32",
            "description": "Maximum capacity"
          },
          "currency": {
            "type": "string",
            "description": "Minimum spend currency"
          },
          "minimumSpendAmount": {
            "type": "string",
            "description": "Minimum spend amount"
          },
          "restaurant": {
            "$ref": "#/components/schemas/RestaurantSummary",
            "description": "Restaurant information"
          }
        }
      },
      "AvailabilityResponse": {
        "type": "object",
        "description": "Availability grid for a room across multiple days",
        "properties": {
          "roomId": {
            "type": "string",
            "format": "uuid",
            "description": "Room identifier"
          },
          "days": {
            "type": "array",
            "description": "List of day + slot availability entries",
            "items": {
              "$ref": "#/components/schemas/DayAvailability"
            }
          }
        }
      },
      "DayAvailability": {
        "type": "object",
        "description": "Availability for a single date",
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date of availability entry",
            "example": "2025-11-27"
          },
          "slots": {
            "type": "array",
            "description": "Slots for the given date",
            "items": {
              "$ref": "#/components/schemas/SlotAvailability"
            }
          }
        }
      },
      "SlotAvailability": {
        "type": "object",
        "description": "Availability of a single slot within a date",
        "properties": {
          "slot": {
            "type": "string",
            "description": "Slot name",
            "enum": [
              "BREAKFAST",
              "LUNCH",
              "DINNER",
              "LATE_NIGHT"
            ]
          },
          "available": {
            "type": "boolean",
            "description": "Whether the slot is available"
          },
          "reason": {
            "type": "string",
            "description": "Optional reason if unavailable"
          }
        }
      },
      "PageReservationResponse": {
        "type": "object",
        "properties": {
          "totalPages": {
            "type": "integer",
            "format": "int32"
          },
          "totalElements": {
            "type": "integer",
            "format": "int64"
          },
          "first": {
            "type": "boolean"
          },
          "last": {
            "type": "boolean"
          },
          "size": {
            "type": "integer",
            "format": "int32"
          },
          "content": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ReservationResponse"
            }
          },
          "number": {
            "type": "integer",
            "format": "int32"
          },
          "sort": {
            "$ref": "#/components/schemas/SortObject"
          },
          "numberOfElements": {
            "type": "integer",
            "format": "int32"
          },
          "pageable": {
            "$ref": "#/components/schemas/PageableObject"
          },
          "empty": {
            "type": "boolean"
          }
        }
      },
      "PageableObject": {
        "type": "object",
        "properties": {
          "offset": {
            "type": "integer",
            "format": "int64"
          },
          "sort": {
            "$ref": "#/components/schemas/SortObject"
          },
          "paged": {
            "type": "boolean"
          },
          "pageSize": {
            "type": "integer",
            "format": "int32"
          },
          "pageNumber": {
            "type": "integer",
            "format": "int32"
          },
          "unpaged": {
            "type": "boolean"
          }
        }
      },
      "SortObject": {
        "type": "object",
        "properties": {
          "empty": {
            "type": "boolean"
          },
          "sorted": {
            "type": "boolean"
          },
          "unsorted": {
            "type": "boolean"
          }
        }
      }
    }
  }
}